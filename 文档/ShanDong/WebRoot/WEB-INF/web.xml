<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>userServlet1</servlet-name>
    <servlet-class>com.servlet.userServlet1</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>userServlet2</servlet-name>
    <servlet-class>com.servlet.userServlet2</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>userServlet3</servlet-name>
    <servlet-class>com.servlet.userServlet3</servlet-class>
  </servlet>



  <servlet-mapping>
    <servlet-name>userServlet1</servlet-name>
    <url-pattern>/userServlet1</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userServlet2</servlet-name>
    <url-pattern>/userServlet2</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>userServlet3</servlet-name>
    <url-pattern>/userServlet3</url-pattern>
  </servlet-mapping>

</web-app>